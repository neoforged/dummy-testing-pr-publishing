{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>neoforged/actions:renovate_preset"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "tools\\.properties$"
      ],
      "matchStrings": [
        "[A-Z_]+=(?<depName>[a-z0-9:\\.-]+):(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "gradle"
    }
  ]
}
